<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Movie Title -->
    <TextView
        android:id="@+id/id_resto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/name_resto"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:text="ID"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/name_resto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:text="NAME"/>


    <!-- Rating -->
    <TextView
        android:id="@+id/cost_for_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_resto"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MYR"
        android:layout_toRightOf="@+id/cost_for_two"
        android:layout_below="@+id/name_resto"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <!-- Genre -->
    <TextView
        android:id="@+id/state_resto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cost_for_two"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="@color/genre"
        android:textSize="15dip"
        android:text="STATE"/>

    <TextView
        android:id="@+id/city_resto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/state_resto"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="@color/genre"
        android:textSize="13dip"
        android:text="CITY"/>


</RelativeLayout>